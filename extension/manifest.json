{
	"manifest_version": 2,
	"name": "browser-cmd controller",
	"version": "1.0",

	"background": {
		"scripts": [
			"browser-polyfill.js",
			"main.js"
		]
	},

	"content_scripts": [
		{
			"matches": [ "<all_urls>" ],
			"js": [ "browser-polyfill.js" ]
		}
	],

	"browser_action": {
		"default_popup": "popup.html"
	},

	"permissions": [
		"tabs",
		"bookmarks",
		"history",
		"storage",
		"sessions",
		"notifications",
		"webNavigation",
		"<all_urls>"
	]
}